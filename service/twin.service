[Unit]
Description=Twin Script Service
After=default.target sound.target graphical-session.target
Wants=sound.target graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/env bash -c 'source /home/andy/venv/bin/activate && python /media/mass/scripts/twin/main.py --source pulse -e --local-embed 192.168.1.40 --local-inference 192.168.1.40 --store-ip 192.168.1.40'
WorkingDirectory=/media/mass/scripts/twin
EnvironmentFile=/home/andy/.config/systemd/user/twin.env
Environment="OPENAI_API_KEY=YOUR_API_KEY_PLACEHOLDER"
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
